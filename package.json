{
  "name": "tabarist",
  "version": "1.0.0",
  "description": "WYSIWYG editor for guitar tabs",
  "main": "index.js",
  "author": "Carles Capellas <capellas.carles@gmail.com>",
  "license": "ISC",
  "scripts": {
    "build": "npm run build:browser && npm run build:ssr",
    "build:browser": "rm -rf dist && webpack --config webpack/production.config.js",
    "build:ssr": "rm -rf functions/src/ssr && webpack --config webpack/ssr.config.js",
    "dev": "webpack serve --config webpack/development.config.js",
    "firebase": "firebase",
    "firebase:dev": "firebase emulators:start --only functions",
    "firebase:deploy": "npm run build && firebase deploy",
    "test": "cucumber-js --require-module ts-node/register --require 'source/**/*.cucumber.ts' source/**/*.feature"
  },
  "dependencies": {
    "bootstrap": "^5.3.3",
    "firebase": "^11.1.0",
    "nanoid": "^3.3.8",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-modal": "^3.16.3",
    "react-router": "^7.1.0",
    "react-toastify": "^11.0.3"
  },
  "devDependencies": {
    "@cucumber/cucumber": "^11.2.0",
    "@types/chai": "^4.3.20",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@types/react-modal": "^3.16.3",
    "chai": "^4.5.0",
    "css-loader": "^7.1.2",
    "firebase-tools": "^13.29.1",
    "html-loader": "^5.1.0",
    "mini-css-extract-plugin": "^2.9.2",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.3",
    "webpack": "^5.96.1",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^5.1.0",
    "webpack-merge": "^6.0.1",
    "webpack-node-externals": "^3.0.0"
  }
}
